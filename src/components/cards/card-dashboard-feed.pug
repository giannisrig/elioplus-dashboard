            include ../../components/feed-item

            -var name = 'Partner Name 2'
            -var img = '../assets/images/global/company-2.png'
            -var cat = 'Deal Registration'
            -var desc = 'A new deal has been added by your channel partner Partner Name 2 at 21/05/23, view the deal details and accept or reject the deal.'
            -var linkText = 'View Deal'
            include ../../components/feed-item

            -var name = 'Partner Name 3'
            -var img = '../assets/images/global/company-3.png'
            -var cat = 'Lead Distribution'
            -var desc = 'A new lead has been added by your channel partner Partner Name 1 at 21/05/23, view the lead details and accept or reject the lead.'
            -var linkText = 'View Lead'
            include ../../components/feed-item

            -var name = 'Partner Name 2'
            -var img = '../assets/images/global/company-2.png'
            -var cat = 'Requests'
            -var desc = 'You have a new pending request from channel partner Partner Name 3 to join your network, view the partner profile and accept or reject their request for partnership.'
            -var linkText = 'View Request'
            include ../../components/feed-item

            -var name = 'Partner Name 4'
            -var img = '../assets/images/global/company-4.png'
            -var cat = 'Call Messages'
