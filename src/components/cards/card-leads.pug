            img(src="../assets/images/global/add.svg" alt="Add Icon" title="Add Icon" width="17" height="17")

    <!----------- Tabs End ------------------------------>



    div(id='newLeads' class='tab-content')
        include ../tables/leads-new
    div(id='closedLeads' class='tab-content hidden')
        include ../tables/leads-closed
    include ../../components/cards/card-table-footer
