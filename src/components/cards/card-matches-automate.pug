div(class='card')

    <!----------- Title Start ------------------------------>
    div(class='flex justify-between w-full overflow-hidden flex-col sm:flex-row sm:items-center text-sm mdl:text-base-15 gap-10px')

        h2(class='font-inter font-bold md:text-lg text-2xl') My Connections

        div(class='flex gap-10px flex-wrap')

            a(href='../templates/vendor-pr-matching-criteria.html' class='btn border-blue bg-blue text-white hover:bg-blueDark  text-sm')
                img(src="../assets/images/global/settings-white.svg" alt="Invite Icon" title="Invite Icon" width="17" height="17")
                span Edit matching criteria

            a(href='#' class='btn border-blue text-blue hover:text-blackBlue text-sm')
                span Export Data
                img(src="../assets/images/global/export-blue.svg" alt="Export Icon" title="Export Icon" width="17" height="17")



    <!----------- Title End ------------------------------>



    <!----------- Filters Start ------------------------------>

    div(class='flex justify-between w-full overflow-hidden text-sm mdl:text-base-15')

        div(class="flex gap-15px flex-col xl:flex-row mdl:gap-10px w-full")

            a(href='#' class='hover:text-blue').flex.items-center.gap-5px.text-textGray.font-semibold.text-base-15.trigger-filters
                img(src="../assets/images/global/filters.svg" alt="Filters Icon" title="Filters Icon" width="15" height="15")
                span(class='text-sm sm:text-base-15') Match Filters

            div(class='filters grid hidden grid-cols-1 sm:grid-cols-2 mdl:grid-cols-3 xl:flex gap-10px xl:items-center').text-textGray.font-semibold.text-base-15

                div(class='card-filter w-full xl:w-[380px] sm:col-span-2 mdl:col-span-1')
                    input(placeholder="Type a name, email, phone to search for a partner...").grow.text-sm.outline-none
                    img(src="../assets/images/global/search.svg" alt="Filters Icon" title="Filters Icon" width="15" height="15")
                - var text1= 'Matches from:'
                include ../filters/datepicker
                - var text1= 'Matches to:'
                include ../filters/datepicker



    <!----------- Filters End ------------------------------>

    include ../tables/connections-automate
    include ../../components/cards/card-table-footer
