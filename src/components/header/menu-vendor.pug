mixin menuLinkPrimary(name, href)
    a(href=href class='hover:text-blue transition-colors duration-200 has-submenu').flex.items-center.gap-5px.font-bold
        span=name
        img(src='../assets/images/global/arrow-down.svg' alt='chevron icon')

