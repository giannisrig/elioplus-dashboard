                                                div(class='flex flex-row mdl:flex-col xl:flex-row mdl:gap-10px w-full justify-between')
                                                    a(href='#' class='btn border-iconGray2 text-iconGray2 hover:text-blue hover:border-blue text-xs sm:text-sm') Product Details
                                                    a(href='#' class='btn bg-blue text-white hover:bg-blueDark text-xs sm:text-sm') Purchase a Plan

                                            <!----- Partner Relationship Management ----->
                                            div(class='card gap-15px')
                                                .flex.flex-col.gap-5px
                                                    div(class='flex items-center gap-5px')
                                                        div(class='w-[12px] h-[12px] rounded-full bg-yellow')
                                                        div(class='lead-[14px] text-sm text-textGray') Enabled - Pending Payment
                                                    h3(class='font-inter font-bold text-xl') Partner Relationship Management
                                                .flex.gap-5px
                                                    div(class='text-[13px] font-semibold text-iconGray2 text-center p-[8px] mdl:p-[5px] xl:p-[8px] bg-gray rounded-[6px]') Startup $399
                                                    div(class='text-[13px] font-semibold text-blue text-center p-[8px] mdl:p-[5px] xl:p-[8px] bg-gray rounded-[6px]') Growth $419
