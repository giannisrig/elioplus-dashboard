doctype html
html(lang="en")
    head
        - var title = 'Vendor Dashboard | Elioplus'
        include components/head.pug
    body.text-blackBlue.overflow-x-hidden.bg-gray2
        include components/header/menu-vendor.pug
        main.active
            include components/header/header-vendor
            div(id="dashboardPage" class='py-80px w-full')
                .container
                    div(id="dashboardPageContent" class='w-full flex flex-col gap-60px')

                        <!----------- Content Start ------------------------------>

                        - var title = 'Integrations'
                        - var desc = 'Connect your CRM system with Elioplus PRM to automatically transfer data between your channel partners and your company in order to eliminate manual processes and critical errors. The Elioplus PRM integration with your CRM can help transfer data for the Deal Registration and Lead Distribution features.'
                        - var btn = 'Read more about the Integrations Feature'
                        include components/text-block.pug

                        div(class='card')
                            h2(class='font-inter font-bold text-2xl') Deals
                            .table-container
                                table
                                    thead
                                        th Vendor
                                        th Client
                                        th Location
                                        th Website
                                        th(class='w-[100px] text-center') State
                                        th(class='w-[100px] text-center') Status
                                        th.text-center Date
                                        th Actions
                                    tbody
                                        tr
                                            td
                                                -var name = 'Partner Name 1'
                                                include components/table-cell/company
                                            td
                                                -var text1 = 'Test Lead Client 1'
                                                -var text2 = 'someusermail1@domain.com'
                                                include components/table-cell/double-text
                                            td
                                                -var text1 = 'United Kingdom'
                                                -var text2 = 'North Europe'
                                                include components/table-cell/double-text

                                            td
                                                -var website = 'https://somelongwebs...'
                                                include components/table-cell/website

                                            td
                                                -var text = 'Open'
                                                include components/table-cell/status
                                            td
                                                -var className = 'bg-yellow'
                                                -var text = 'Pending'
                                                include components/table-cell/status
                                            td.text-center 2023/04/15
                                            td Actions


                        <!----------- Content End ------------------------------>

            include components/footer/footer.pug
        include components/scripts.pug
